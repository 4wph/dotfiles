<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc" xmlns:xi="http://www.w3.org/2001/XInclude">
  <resistance>
    <strength>10</strength>
    <screen_edge_strength>20</screen_edge_strength>
  </resistance>
  <focus>
    <focusNew>yes</focusNew>
    <followMouse>no</followMouse>
    <focusLast>yes</focusLast>
    <underMouse>no</underMouse>
    <focusDelay>200</focusDelay>
    <raiseOnFocus>no</raiseOnFocus>
  </focus>
  <placement>
    <policy>Smart</policy>
    <center>yes</center>
    <monitor>Primary</monitor>
    <primaryMonitor>1</primaryMonitor>
  </placement>
  <theme>
    <name>Syscrash</name>
    <titleLayout>CML</titleLayout>
    <keepBorder>yes</keepBorder>
    <animateIconify>no</animateIconify>
    <font place="ActiveWindow">
      <name>Comfortaa</name>
      <size>8</size>
      <weight>Light</weight>
      <slant>normal</slant>
    </font>
    <font place="InactiveWindow">
      <name>Comfortaa</name>
      <size>6</size>
      <weight>Light</weight>
      <slant>normal</slant>
    </font>
    <font place="MenuHeader">
      <name>Comfortaa</name>
      <size>12</size>
      <weight>Light</weight>
      <slant>normal</slant>
    </font>
    <font place="MenuItem">
      <name>Comfortaa</name>
      <size>12</size>
      <weight>Light</weight>
      <slant>normal</slant>
    </font>
    <font place="ActiveOnScreenDisplay">
      <name>Comfortaa</name>
      <size>14</size>
      <weight>Light</weight>
      <slant>normal</slant>
    </font>
    <font place="InactiveOnScreenDisplay">
      <name>Comfortaa</name>
      <size>14</size>
      <weight>Light</weight>
      <slant>normal</slant>
    </font>
  </theme>
  <desktops>
    <number>4</number>
    <firstdesk>1</firstdesk>
    <names/>
    <popupTime>800</popupTime>
  </desktops>
  <resize>
    <drawContents>yes</drawContents>
    <popupShow>Nonpixel</popupShow>
    <popupPosition>Center</popupPosition>
    <popupFixedPosition>
      <x>10</x>
      <y>10</y>
    </popupFixedPosition>
  </resize>
  <keyboard>
    <chainQuitKey>C-g</chainQuitKey>
    <keybind key="W-S-Left">
      <action name="SendToDesktop">
        <to>left</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <keybind key="W-S-Right">
      <action name="SendToDesktop">
        <to>right</to>
        <wrap>no</wrap>
      </action>
    </keybind>
    <keybind key="W-1">
      <action name="GoToDesktop">
        <to>1</to>
      </action>
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop">
        <to>2</to>
      </action>
    </keybind>
    <keybind key="W-3">
      <action name="GoToDesktop">
        <to>3</to>
      </action>
    </keybind>
    <keybind key="W-4">
      <action name="GoToDesktop">
        <to>4</to>
      </action>
    </keybind>
    <!-- Tiling -->
    <keybind key="W-S-m">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <width>1900</width>
        <height>1060</height>
        <x>10</x>
        <y>10</y>
      </action>
    </keybind>
    <keybind key="W-Left">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <width>945</width>
        <height>1060</height>
        <x>10</x>
        <y>10</y>
      </action>
    </keybind>
    <keybind key="W-Right">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <width>945</width>
        <height>1060</height>
        <x>965</x>
        <y>10</y>
      </action>
    </keybind>
    <keybind key="W-Up">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <width>1900</width>
        <height>525</height>
        <x>10</x>
        <y>10</y>
      </action>
    </keybind>
    <keybind key="W-Down">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <width>1900</width>
        <height>525</height>
        <x>10</x>
        <y>545</y>
      </action>
    </keybind>
    <keybind key="W-Home">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <width>945</width>
        <height>525</height>
        <x>10</x>
        <y>10</y>
      </action>
    </keybind>
    <keybind key="W-End">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <width>945</width>
        <height>525</height>
        <x>10</x>
        <y>545</y>
      </action>
    </keybind>
    <keybind key="W-Prior">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <width>945</width>
        <height>525</height>
        <x>965</x>
        <y>10</y>
      </action>
    </keybind>
    <keybind key="W-Next">
      <action name="UnmaximizeFull"/>
      <action name="MoveResizeTo">
        <width>945</width>
        <height>525</height>
        <x>965</x>
        <y>545</y>
      </action>
    </keybind>
    <keybind key="W-q">
      <action name="Close"/>
    </keybind>
    <keybind key="W-m">
      <action name="ToggleMaximize"/>
    </keybind>
    <keybind key="W-Tab">
      <action name="NextWindow">
        <dialog>no</dialog>
        <bar>no</bar>
        <interactive>no</interactive>
        <finalactions>
          <action name="Focus"/>
          <action name="Raise"/>
          <action name="Unshade"/>
        </finalactions>
      </action>
    </keybind>
    <keybind key="W-space">
      <action name="ShowMenu">
        <menu>client-menu</menu>
      </action>
    </keybind>
    <keybind key="Print">
      <action name="Execute">
        <command>scrot -s /home/HDD/Pictures/Leticia/Screenshots/%m%d-%H%M%S.png</command>
      </action>
    </keybind>
    <keybind key="A-Print">
      <action name="Execute">
        <command>~/.local/bin/screen2clip</command>
      </action>
    </keybind>
    <keybind key="A-Tab">
      <action name="NextWindow">
        <finalactions>
          <action name="Focus"/>
          <action name="Raise"/>
          <action name="Unshade"/>
        </finalactions>
      </action>
    </keybind>
    <!-- Keybindings for running applications -->
    <keybind key="W-Return">
      <action name="Execute">
        <command>kitty</command>
      </action>
    </keybind>
    <keybind key="W-b">
      <action name="Execute">
        <command>qutebrowser</command>
      </action>
    </keybind>
    <keybind key="W-d">
      <action name="Execute">
        <command>~/.local/bin/dmenu_dracula</command>
      </action>
    </keybind>
    <keybind key="W-e">
      <action name="Execute">
        <command>pcmanfm</command>
      </action>
    </keybind>
    <keybind key="W-C-e">
      <action name="Execute">
        <command>emacs</command>
      </action>
    </keybind>
    <keybind key="W-c">
      <action name="Execute">
        <command>/home/HDD/Downloads/Apps/codium/codium</command>
      </action>
    </keybind>
    <!-- Launch scrot when Super + x is pressed -->
    <keybind key="W-x">
      <action name="Execute">
        <command>scrot /home/HDD/Pictures/Screenshots/%m%d-%H%M%S.png</command>
      </action>
    </keybind>
    <!-- Audio volume control -->
    <keybind key="W-v">
      <action name="Execute">
        <command>amixer set Headphone 5%+</command>
      </action>
    </keybind>
    <keybind key="W-S-v">
      <action name="Execute">
        <command>amixer set Headphone 5%-</command>
      </action>
    </keybind>
    <keybind key="XF86AudioMute">
      <action name="Execute">
        <command>amixer set Headphone toggle</command>
      </action>
    </keybind>
  </keyboard>
  <mouse>
    <dragThreshold>1</dragThreshold>
    <doubleClickTime>500</doubleClickTime>
    <screenEdgeWarpTime>0</screenEdgeWarpTime>
    <screenEdgeWarpMouse>false</screenEdgeWarpMouse>
    <context name="Frame">
      <mousebind button="W-Left" action="Drag">
        <action name="Move"/>
      </mousebind>
      <mousebind button="W-Right" action="Drag">
        <action name="Resize"/>
      </mousebind>
    </context>
    <context name="Top">
      <mousebind button="Left" action="Drag">
        <action name="Resize">
          <edge>top</edge>
        </action>
      </mousebind>
    </context>
    <context name="Left">
      <mousebind button="Left" action="Drag">
        <action name="Resize">
          <edge>left</edge>
        </action>
      </mousebind>
    </context>
    <context name="Right">
      <mousebind button="Left" action="Drag">
        <action name="Resize">
          <edge>right</edge>
        </action>
      </mousebind>
    </context>
    <context name="Bottom">
      <mousebind button="Left" action="Drag">
        <action name="Resize">
          <edge>bottom</edge>
        </action>
      </mousebind>
      <mousebind button="Right" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="ShowMenu">
          <menu>client-menu</menu>
        </action>
      </mousebind>
    </context>
    <context name="TRCorner BRCorner TLCorner BLCorner">
      <mousebind button="Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
        <action name="Unshade"/>
      </mousebind>
      <mousebind button="Left" action="Drag">
        <action name="Resize"/>
      </mousebind>
    </context>
    <context name="Client">
      <mousebind button="Left" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
      <mousebind button="Middle" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
      <mousebind button="Right" action="Press">
        <action name="Focus"/>
        <action name="Raise"/>
      </mousebind>
    </context>
    <context name="AllDesktops">
      <mousebind button="Left" action="Click">
        <action name="ToggleOmnipresent"/>
      </mousebind>
    </context>
    <context name="Desktop">
      <mousebind button="Up" action="Click">
        <action name="GoToDesktop">
          <to>previous</to>
        </action>
      </mousebind>
      <mousebind button="Down" action="Click">
        <action name="GoToDesktop">
          <to>next</to>
        </action>
      </mousebind>
    </context>
    <context name="Root">
      <!-- Menus -->
      <mousebind button="Middle" action="Press">
        <action name="ShowMenu">
          <menu>client-list-combined-menu</menu>
        </action>
      </mousebind>
      <mousebind button="Right" action="Press">
        <action name="ShowMenu">
          <menu>root-menu</menu>
        </action>
      </mousebind>
    </context>
  </mouse>
  <menu>
    <file>menu.xml</file>
    <hideDelay>200</hideDelay>
    <middle>no</middle>
    <submenuShowDelay>100</submenuShowDelay>
    <submenuHideDelay>400</submenuHideDelay>
    <showIcons>no</showIcons>
    <manageDesktops>yes</manageDesktops>
  </menu>
  <applications>
    <application class="*">
      <decor>no</decor>
    </application>
    <application name="Conky">
      <layer>above</layer>
    </application>
  </applications>
</openbox_config>
